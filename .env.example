# Example environment configuration for SecureGuard
# Copy this file to .env and adjust values for your setup

# Database Configuration
DATABASE_URL=postgresql://secureguard:password@localhost:5432/secureguard_dev
DATABASE_URL_TEST=postgresql://secureguard:password@localhost:5432/secureguard_test

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production

# Server Configuration
HOST=127.0.0.1
PORT=8080

# Logging
RUST_LOG=secureguard_api=info,tower_http=debug,axum=debug